extends ../layout

block content 
    a(href='/bicicletas') Volver

    br
    br
    br

    h1  Nueva Bicicleta

    br
    br
    
    form(Action=`/bicicletas/${bici.id}/update` method='post')
        label(for='id') ID:
        input#id(type='text' name='id' value=bici.id)
        br
        label(for='color') Color:
        input#id(type='text' name='color' value=bici.color)
        br
        label(for='modelo') Modelo:
        input#id(type='text' name='modelo' value=bici.modelo)
        br
        label(for='modelo') Latitud:
        input#id(type='text' name='lat' value=bici.ubicacion[0])
        br
        label(for='modelo') Longitud:
        input#id(type='text' name='long' value=bici.ubicacion[1])
        br
        br
        input.btn(type='submit' value='Ok')