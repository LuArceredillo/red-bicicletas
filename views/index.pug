extends layout

block content
    nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top
      .container
        a.navbar-brand.js-scroll-trigger(href='#page-top') NodeJs
        button.navbar-toggler.navbar-toggler-right(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
          | Menu
          i.fas.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#about') Nosotros
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#projects') Bicicletas
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#signup') Contacto
    // Masthead
    header.masthead
      .container.d-flex.h-100.align-items-center
        .mx-auto.text-center
          h1.mx-auto.my-0.text-uppercase Red de ciclistas
          h2.text-white-50.mx-auto.mt-2.mb-5 La primera red de ciclistas.
          a.btn.btn-primary.js-scroll-trigger(href='#about') Comenzar
    // About
    section#about.about-section.text-center
      .container
        .row
          .col-lg-8.mx-auto
            h2.text-white.mb-4 Lucila Arceredillo
            p.text-white-50
              Este proyecto es parte de un curso de NodeJs y MongoDB que estoy realizando
        img.img-fluid(src='images/ipad.png' alt='')
    // Projects
    section#projects.projects-section.bg-light
      .container
        #main_map
     
    // Contact
    section.contact-section.bg-black
      .container
        .row
          .col-md-4.mb-3.mb-md-0
            .card.py-4.h-100
              .card-body.text-center
                i.fas.fa-map-marked-alt.text-primary.mb-2
                h4.text-uppercase.m-0 Direccion
                hr.my-4
                .small.text-black-50 Bahia Blanca
          .col-md-4.mb-3.mb-md-0
            .card.py-4.h-100
              .card-body.text-center
                i.fas.fa-envelope.text-primary.mb-2
                h4.text-uppercase.m-0 Email
                hr.my-4
                .small.text-black-50
                  a(href='#!') hello@luarceredillo.com
          .col-md-4.mb-3.mb-md-0
            .card.py-4.h-100
              .card-body.text-center
                i.fas.fa-mobile-alt.text-primary.mb-2
                h4.text-uppercase.m-0 Tel
                hr.my-4
                .small.text-black-50 +54 (291) xxx-xxxx
        .social.d-flex.justify-content-center
          a.mx-2(href='#!')
            i.fab.fa-twitter
          a.mx-2(href='#!')
            i.fab.fa-facebook-f
          a.mx-2(href='#!')
            i.fab.fa-github
    // Bootstrap core JS
    script(src='vendor/jquery.min.js')
    script(src='vendor/bootstrap.bundle.min.js')
    // Third party plugin JS
    script(src='vendor/jquery.easing.min.js')
    // Core theme JS
    script(src='javascripts/scripts.js')
    script(src='javascripts/map.js')
